<Window x:Class="VAOEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VAOEngine"
        xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
        mc:Ignorable="d"
        Title="VAOEngine Editor" Height="1080" Width="1920" MouseMove="Window_MouseMove" Icon="/VAOEngineIcon.png">
    <Grid Background="#2e3e5f">


        <TabControl x:Name="MainControl" BorderBrush="{x:Null}" Background="#FF2B3446" TabStripPlacement="Left" >
            <TabItem x:Name="MainScene">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Scene</TextBlock>
                    </StackPanel>

                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="61*"/>
                            <RowDefinition Height="25*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240*"/>
                            <ColumnDefinition Width="79*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="1">
                            <TabControl Height="309" Background="Transparent" BorderBrush="Transparent">
                                <TabItem>
                                    <TabItem.Header>
                                        <TextBlock FontSize="22" FontFamily="Franklin Gothic Medium">Tools</TextBlock>
                                    </TabItem.Header>
                                    <TabItem.Content>
                                        <Grid>
                                            <Border Background="#FF222833" CornerRadius="10" BorderBrush="Transparent" Margin="0,0,39,0">
                                                <Grid Height="295">
                                                    <TextBlock FontSize="42" Foreground="White" FontFamily="Franklin Gothic Medium" Cursor="SizeNS">Tools</TextBlock>
                                                    <Button Content="Add Model" FontSize="40" Width="216" FontFamily="Franklin Gothic Medium" Click="ImportModel_Click" HorizontalAlignment="Left" Margin="10,58,0,196"/>
                                                    <Button Content="Add Light" FontSize="40" Width="216" FontFamily="Franklin Gothic Medium" Click="LightAdd_Click" HorizontalAlignment="Left" Margin="10,127,0,127"/>

                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </TabItem.Content>
                                </TabItem>
                                <TabItem>
                                    <TabItem.Header>
                                        <TextBlock FontSize="22" FontFamily="Franklin Gothic Medium">Browser</TextBlock>
                                    </TabItem.Header>
                                    <TabItem.Content>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="52*"/>
                                                <ColumnDefinition Width="405*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="1">
                                                <Border Background="#FF222833" CornerRadius="10" BorderBrush="Transparent" Width="1180" Height="309">
                                                    <Grid Height="295"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Column="0">
                                                <Border Background="#FF222833" CornerRadius="10" BorderBrush="Transparent" Height="293">
                                                    <Grid Height="295"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </TabItem.Content>
                                </TabItem>
                            </TabControl>
                        </StackPanel>


                        <StackPanel Grid.Row="0" Margin="0,9,0,2" HorizontalAlignment="Left" Width="1404" Grid.RowSpan="2">
                            <glWpfControl:GLWpfControl
                                x:Name="_Control"
                                Render="_Control_Render"
                                MouseMove="_Control_MouseMove" Height="700" Width="1380"/>

                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                            <Border Height="701" Background="#FF222833" CornerRadius="10">
                                <StackPanel>
                                    <TreeView x:Name="ListObject" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Medium">
                                        <TreeViewItem x:Name="ListSceneObject" Header="Scene Object" Foreground="White">

                                        </TreeViewItem>
                                    </TreeView>
                                    <TreeView x:Name="ListLight" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Medium">
                                        <TreeViewItem x:Name="ListLightScene" Header="Scene Light" Foreground="White">

                                        </TreeViewItem>
                                    </TreeView>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">

                            <TextBlock Foreground="White" FontSize="34">Settings</TextBlock>
                            <Border Height="274" Background="#FF222833" CornerRadius="10">
                                <Grid>

                                    <TextBlock Foreground="White" FontSize="30">ObjectName</TextBlock>
                                    <ListBox x:Name="SettingsObjectList" Background="Transparent" BorderBrush="Transparent">

                                    </ListBox>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <GridSplitter Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" ShowsPreview="false" Width="3" Margin="0,0,0,18"/>
                        
                    </Grid>


                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="OutputLog">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Output log</TextBlock>
                        <Button x:Name="Destroy" Content="X" Background="DarkRed" Foreground="White" HorizontalAlignment="Right" Click="Destroy_Click"></Button>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="Log" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="14" FontFamily="Franklin Gothic Medium" Grid.RowSpan="2">

                        </ListBox>
                        <StackPanel Grid.Row="1">
                            <Grid Height="100">
                                <Border Background="#FF222833" Margin="0,0,0,-24" BorderBrush="Transparent">

                                </Border>
                                <Button x:Name="ClearLog" Margin="26,22,1644,28" Content="Clear log" FontSize="32" FontFamily="Franklin Gothic Medium" Click="ClearLog_Click">

                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </TabItem.Content>
            </TabItem>

        </TabControl>







    </Grid>
</Window>
