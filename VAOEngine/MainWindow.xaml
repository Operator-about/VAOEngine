<Window x:Class="VAOEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VAOEngine"
        xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="GameWindow">
                <Grid x:Name="GameGrid" Background="#FFE5E5E5">
                    <glWpfControl:GLWpfControl
                        x:Name="_Control"
                        Render="_Control_Render">

                        <glWpfControl:GLWpfControl.Settings>
                            <glWpfControl:GLWpfControlSettings MajorVersion="4"
                                                               MinorVersion="0"/>
                        </glWpfControl:GLWpfControl.Settings>

                    </glWpfControl:GLWpfControl>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
